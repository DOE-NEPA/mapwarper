	<tr><td>document_start_date:</td><td><%= @nepa_document.document_start_date.try(:strftime, '%m/%d/%Y') %></td></tr>
	<tr><td>document_end_date:</td><td><%= @nepa_document.document_end_date.try(:strftime, '%m/%d/%Y') %></td></tr>
	<tr><td>contractor:</td><td><%= @nepa_document.contractor %></td></tr>
	<tr><td>cancel_dt:</td><td><%= @nepa_document.cancel_dt.try(:strftime, '%m/%d/%Y') %></td></tr>

