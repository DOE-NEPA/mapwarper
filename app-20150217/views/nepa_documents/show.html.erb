	<tr><td>is_adopted:</td><td><%= @nepa_document.is_adopted %></td></tr>
	<tr><td>intended_to_be_adopted:</td><td><%= @nepa_document.intended_to_be_adopted %></td></tr>
	<tr><td>comments:</td><td><%= @nepa_document.comments %></td></tr>
