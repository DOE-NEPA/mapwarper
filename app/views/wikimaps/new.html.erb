<h2>Add new map from Wikimedia Commons</h2>
<%= error_messages_for :map %>
<b>
  <%= @image_title %>
</b>
<% if logged_in? %>

  <%  form_tag '/wikimaps/create', :method => :put do  %>
    <%# label_tag :path, "Commons Image Path" %> 
    <%= hidden_field_tag   :path, params[:path] %>
    <br />
    <%= submit_tag "Add this map" %>
  <% end %>

<% else %>
  <p>
  This map is not in the wikimaps warper yet - to add it, <%= link_to "just sign in", new_session_path %> and come back to this page.
  </p>
<% end %>
