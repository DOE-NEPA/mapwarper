

  <h2>Browse Maps
    <%if @query && @query.length > 0 %>&mdash; Searched for "<%=@query%>"
    <%end-%>
  </h2>

  <%= render :partial => 'shared/search' -%>

  <%= will_paginate @maps, :previous_label => '&laquo;', :next_label => '&raquo;', renderer: BootstrapPagination::Rails %>

  <table class="table">
    <thead>
      <tr>
        <th>Map</th>
        <%= sort_header_tag('title', :title => "Title") %>
        <%= sort_header_tag('updated_at', :title => "Last modified") %>
        <%= sort_header_tag('status', :title => "Status") %>
      </tr>
    </thead>

    <tbody>
      <%= render :partial => 'map', :collection => @maps unless @maps.nil? %>
    </tbody>
  </table>

<%= will_paginate @maps, :previous_label => '&laquo;', :next_label => '&raquo;', renderer: BootstrapPagination::Rails %>
<div class="per_page_select">
  <%= page_entries_info @maps %>.&nbsp;<%= select_tag :per_page, options_for_select([10,20,50,100], @per_page.to_i), :onchange => "if(this.value){reload_with_page(this.value)};" %> per page.
</div>
